package arvoreavl;


import java.util.Scanner;

/**
 *
 * @author Usuário 01
 */
public class Testes{
    
    public static void main (String[] args){
        Scanner teclado = new Scanner(System.in); 
        ArvoreAVL arvore = new ArvoreAVL(new Elemento(teclado.nextInt()));
        arvore.calcularBalanceamento();
        arvore = arvore.verificaBalaceamento();
        System.out.println(arvore.printArvore(0));
        boolean opcao = true;
        
        while(opcao == true){
            
            arvore = arvore.inserir(new Elemento(teclado.nextInt()));
            arvore.calcularBalanceamento();
            arvore = arvore.verificaBalaceamento();
            System.out.println(arvore.printArvore(0));
            System.out.println("Deseja adicionar mais algum nó ? Digite 1 se sim ");
            int opcao2 = teclado.nextInt();
            
            if (opcao2 != 1)
                opcao = false;
        }
        
        opcao = true;
        while(opcao == true){
            System.out.println("Digite o número a ser procurado: ");
            ArvoreAVL arvore2 = new ArvoreAVL();
            int valorProcurado;
            valorProcurado = teclado.nextInt();
            
            // aqui é pra verificar se arvore de paalavras buscadas está vazia, caso esteja
            // Só procura na principal
            
            if(arvore2.getEsquerda() == null && arvore2.getDireita() == null && arvore2.isEmpty() == true){
                int verifica = arvore.buscar(valorProcurado);

                if(verifica != 0){
                    // Caso o elemento esteja na arvore principal, ele remove e adiciona na arvore com numeros buscados
                    Elemento serRemovido = new Elemento(valorProcurado);
                    ArvoreAVL noRemover = arvore.remover(serRemovido);
                    arvore2 = arvore2.inserir(noRemover.getElemento());
                    System.out.println("Nova arvore");
                    System.out.println(arvore2.printArvore(0));
                    
                }else{
                    System.out.println("Elemento não presente na arvore ");
                }
                System.out.println("Deseja procurar novamente ? se sim digite 1");
                int opcao2 = teclado.nextInt();
                
                if (opcao2 != 1)
                    opcao = false;
            }else{
                
                System.out.println("Arvore de elementos buscados não está vaziaa");
                int verifica = arvore2.buscar(valorProcurado);
                
                // Como a arvore de elementos buscados não esteja vazia
                // Procura primeiro nela, se não achar, vai pra principal
                // Se achar na principal, removo o que seria o nó da arvore
                // E adiciona naarvore de elementos buscados
                // Caso não ache na principal, o elemento não está na arvore
                
               if (verifica == 0){
                   int verifica2 = arvore.buscar(valorProcurado);
                   if (verifica2 == 0){
                       System.out.println("Elemento não presente em nenhuma das duas árvores");
                   }
                   else{
                       System.out.println("Elemento encontrado na árvore principal");
                       System.out.println("Adicionando elemento encontrado na árvore de elementos buscados");
                       Elemento serRemovido = new Elemento(valorProcurado);
                       ArvoreAVL noRemover = arvore.remover(serRemovido);
                       arvore2 = arvore2.inserir(noRemover.getElemento());
                       arvore2.calcularBalanceamento();
                       arvore2 = arvore2.verificaBalaceamento();
                       System.out.println(arvore2.printArvore(0));
                   }

               }else{
                   System.out.println("Elemento encontrado na árvore com elementos buscados");
               }
               
               System.out.println("Deseja procurar novamente ? se sim digite 1");
               int opcao2 = teclado.nextInt();
                
               if (opcao2 != 1)
                    opcao = false;

            }
        }

    }    
}
